    <div class="bg-[#7AEB86] text-white shadow w-full p-2 flex items-center justify-between">
        <div class="flex items-center">
            <div class="flex items-center"> <!-- Mostrado en todos los dispositivos -->
                <img src={{asset('medias/logo.jpg') }} alt="Logo" class="w-28 h-18 mr-2">
                <h2 class="font-bold text-[#082A33] text-xl">In the sky</h2>
            </div>
            <div class="md:hidden flex items-center"> <!-- Se muestra solo en dispositivos pequeños -->
                <button id="menuBtn">
                    <i class="fas fa-bars text-[#082A33] text-lg"></i> <!-- Ícono de menú -->
                </button>
            </div>
        </div>

        <div class="space-x-6 mr-4 flex">
            <p class='text-[#082A33] text-xl'>Prénom Nom</p>
            <button>
                <i class="fas fa-user text-[#082A33] text-xl"></i>
            </button>
        </div>
    </div>

    <!-- Barre de navigation à gauche -->
    <div class="flex-1 flex flex-wrap">
        <div class="p-2 bg-[#082A33] w-full md:w-56 lg:w-60 flex flex-col md:flex hidden" id="sideNav">
            <nav>
                <a class="block text-white py-2.5 px-4 my-4 rounded transition duration-200 hover:bg-gradient-to-r from-[#FF9029] to-[#FF7B00] hover:text-white" id='menuVoyage' href="{{ path('app_voyage_index') }}">
                    <i class="fa-solid fa-mountain-sun mr-2"></i>Voyages
                </a>
                <a class="block text-white py-2.5 px-4 my-4 rounded transition duration-200 hover:bg-gradient-to-r from-[#FF9029] to-[#FF7B00] hover:text-white" href="#">
                    <i class="fas fa-file-alt mr-2"></i>Prises de contact
                </a>
                <a class="block text-white py-2.5 px-4 my-4 rounded transition duration-200 hover:bg-gradient-to-r from-[#FF9029] to-[#FF7B00] hover:text-white" href="#">
                    <i class="fas fa-users mr-2"></i>Utilisateurs
                </a>
                
            </nav>

            <!-- Déconnexion -->
            <a class="block text-white py-2.5 px-4 my-2 rounded transition duration-200 hover:bg-gradient-to-r from-[#FF9029] to-[#FF7B00] hover:text-white mt-auto" href="#">
                <i class="fas fa-sign-out-alt mr-2"></i>Déconnexion
            </a>

            <div class="bg-gradient-to-r from-[#FF9029] to-[#FF7B00] h-px mt-2"></div>

            <p class="mb-1 px-5 py-3 text-left text-xs text-[#FF9029]">Copyright WCSLAT@2023</p>

        </div>

        <div class="flex-1 p-4 w-full md:w-1/2">
          


