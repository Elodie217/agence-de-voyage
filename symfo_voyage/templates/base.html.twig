</div>
<div class="lg:px-32 md:px-48 sm:px-20 px-8 w-full lg:w-1/2">
  
    {{ form_start(registrationForm) }}
<div class="flex items-center justify-center p-12">
    <div class="mx-auto w-full max-w-[550px]">
        <h1 class="text-2xl font-semibold mb-5">Inscription</h1>
        <form action="https://formbold.com/s/FORM_ID" method="POST">
       
        <div class="-mx-3 flex flex-wrap">
            <div class="w-full px-3 sm:w-1/2">
            <div class="mb-5">
                <label class='mb-3 block text-base font-medium text-[#07074D]"'>                
                {{form_label(registrationForm.nom) }}
                </label>
                {{ form_row(registrationForm.nom, {'label': false}) }}
            </div>
            </div>
            <div class="w-full px-3 sm:w-1/2">
            <div class="mb-5">
                <label class='mb-3 block text-base font-medium text-[#07074D]"'>                
                {{form_label(registrationForm.prenom) }}
                </label>
                
                {{ form_row(registrationForm.prenom, {'label': false}) }}
            </div>
            </div>
        </div>
        <div class="mb-5">
            
            <label class='mb-3 block text-base font-medium text-[#07074D]"'>                
            {{form_label(registrationForm.email) }}
            </label>
                {{ form_row(registrationForm.email, {'label': false}) }}

        </div>

        <div class="mb-5">
            
            <label class='mb-3 block text-base font-medium text-[#07074D]"'>                
            {{form_label(registrationForm.telephone) }}
            </label>
                {{ form_row(registrationForm.telephone, {'label': false}) }}

        </div>
         
        <div class="mb-5">
            
            <label class='mb-3 block text-base font-medium text-[#07074D]"'>                
            {{form_label(registrationForm.plainPassword) }}
            </label>
                {{ form_row(registrationForm.plainPassword, {'label': false}) }}

        </div>

            {{ form_row(registrationForm.Enregistrer) }}

        </form>
    </div>
</div>
{{ form_end(registrationForm) }}

 
</div>
</div>

    {% else if app.request.pathinfo == path('app_login') %}


